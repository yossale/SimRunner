{
    "connectionString": "$DEMO_DB_URI",
    "reportInterval": 10000,
    "templates": [
        {
            "name": "userTicket",
            "database": "poc_demo",
            "collection": "tickets_pa",
            "drop": true,            
            "dictionaries": {
                "statuses": [
                    "OPEN",
                    "PENDING",
                    "REJECTED",
                    "CLOSED_BY_USER",
                    "FIXED",
                    "CLOSED"
                ],
                "severity": [
                    "LOW",
                    "NORMAL",
                    "HIGH",
                    "URGENT",
                    "CRITICAL"
                ],
                "assignee": {
                    "file": "./resources/actors_100.json",
                    "type": "json"
                }
            },
            "variables": {
                "createDate": {
                    "%date": {
                        "min": {
                            "$date": "2022-01-01"
                        },
                        "max": {
                            "$date": "2022-12-31"
                        }
                    }
                }
            },
            "template": {
                "_id": "%objectid",      
                "runId": {
                    "%toString": {
                        "of": {
                            "%natural": {
                                "min": 10000,
                                "max": 325000
                            }
                        }
                    }
                },          
                "name": "%fullName",
                "title": "%lorem.sentence",
                "description": "%lorem.sentence",
                "createdAt": "#createDate",
                "ticketId": {
                    "%number": {
                        "min": 10000
                    }
                },
                "customerId": {
                    "%stringTemplate": {
                        "template": "!!&&?!??&"
                    }
                },
                "assignee": {
                    "%dictionary": {
                        "name": "assignee"
                    }
                },
                "status": {
                    "%dictionary": {
                        "name": "statuses"
                    }
                },
                "severity": {
                    "%dictionary": {
                        "name": "severity"
                    }
                }
            },
            "indexes": [
                {
                    "ticketId": 1
                },
                {
                    "status": 1,
                    "severity": 1
                },                
                {
                    "tenantId": 1,
                    "assignee": 1                    
                }
            ]
        }
    ],
    "workloads": [
        {
            "name": "10M",         
            "template": "userTicket",
            "op": "insert",
            "threads": 10,
            "batch": 100,
            "stopAfter": 100
        }        
    ]
}