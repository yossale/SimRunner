{
    "connectionString": "$NUVEI_DB_URI",
    "reportInterval": 10000,
    "templates": [
        {
            "name": "userTicket",
            "database": "nuvei_demo1",
            "collection": "sample",
            "drop": true,
            "dictionaries": {
                "statuses": [
                    "OPEN",
                    "PENDING",
                    "REJECTED",
                    "CLOSED_BY_USER",
                    "FIXED",
                    "CLOSED"
                ],
                "severity": [
                    "LOW",
                    "NORMAL",
                    "HIGH",
                    "URGENT",
                    "CRITICAL"
                ],
                "assignee": {
                    "file": "./resources/actors_100.json",
                    "type": "json"
                }
            },
            "variables": {
                "createDate": {
                    "%date": {
                        "min": {
                            "$date": "2021-10-01"
                        },
                        "max": {
                            "$date": "2023-03-23"
                        }
                    }
                }
            },
            "template": {
                "_id": "%objectid",
                "uuid": "%uuidBinary",
                "uuidStr": {"%toString": {"of": "#uuid"}},
                "tenantId": "#tenantId",
                "name": "%fullName",
                "title": "%lorem.sentence",
                "description": "%lorem.sentence",
                "createdAt": "#createDate",
                "ticketId": {
                    "%number": {
                        "min": 10000
                    }
                },
                "customerId": {
                    "%stringTemplate": {
                        "template": "!!&&?!??&"
                    }
                },
                "assignee": {
                    "%dictionary": {
                        "name": "assignee"
                    }
                },
                "status": {
                    "%dictionary": {
                        "name": "statuses"
                    }
                },
                "updateAt": {
                    "%date": {
                        "min": "#createDate",
                        "max": {
                            "$date": "2023-08-23"
                        }
                    }
                },
                "severity": {
                    "%dictionary": {
                        "name": "severity"
                    }
                }
            },
            "remember": [
                {
                    "compound": [
                        "customerId",
                        "assignee"
                    ],
                    "name": "customerAndAssignee"
                }
            ],
            "indexes": [
                {
                    "ticketId": 1
                },
                {
                    "status": 1,
                    "severity": 1
                },
                {
                    "createdAt": -1
                },
                {
                    "tenantId": 1,
                    "assignee": 1
                }
            ]
        }
    ],
    "workloads": [
        {
            "name": "100M",
            "variables": {
                "tenantId": "100M"
            },
            "template": "userTicket",
            "op": "insert",
            "threads": 10,
            "batch": 1,
            "stopAfter": 100000
        },
        {
            "name": "100M",
            "variables": {
                "tenantId": "100M"
            },
            "template": "userTicket",
            "op": "aggregate",
            "threads": 10,
            "stopAfter": 100000,
            "params": {
                "pipeline": [
                    {
                        "$match": {
                            "customerId": "#customerAndAssignee.customerId",
                            "assignee": "#customerAndAssignee.assignee"
                        }
                    },
                    {
                        "$group": {                            
                            "_id": "#customerAndAssignee.customerId",
                            "count": {
                                "$count": {}
                            }
                        }
                    }
                ]
            }
        }
    ]
}