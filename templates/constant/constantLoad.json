{
    "connectionString": "$DEMO_DB_URI",
    "reportInterval": 10000,
    "templates": [
        {
            "name": "constantLoad",
            "database": "poc_demo",
            "collection": "tickets_constantLoad",
            "drop": true,
            "dictionaries": {
                "statuses": [
                    "OPEN",
                    "PENDING",
                    "REJECTED",
                    "CLOSED_BY_USER",
                    "FIXED",
                    "CLOSED"
                ],
                "severity": [
                    "LOW",
                    "NORMAL",
                    "HIGH",
                    "URGENT",
                    "CRITICAL"
                ],
                "assignee": {
                    "file": "./resources/actors_100.json",
                    "type": "json"
                }
            },
            "variables": {
                "createDate": {
                    "%date": {
                        "min": {
                            "$date": "2021-10-01"
                        },
                        "max": {
                            "$date": "2023-03-23"
                        }
                    }
                }
            },
            "template": {
                "_id": "%objectid",
                "tenantId": "#tenantId",
                "name": "%fullName",
                "title": "%lorem.sentence",
                "description": "%lorem.sentence",
                "createdAt": "#createDate",
                "ticketId": {
                    "%number": {
                        "min": 10000
                    }
                },
                "customerId": {
                    "%stringTemplate": {
                        "template": "!!&&?!??&"
                    }
                },
                "assignee": {
                    "%dictionary": {
                        "name": "assignee"
                    }
                },
                "status": {
                    "%dictionary": {
                        "name": "statuses"
                    }
                },
                "updateAt": {
                    "%date": {
                        "min": "#createDate",
                        "max": {
                            "$date": "2023-08-23"
                        }
                    }
                },
                "severity": {
                    "%dictionary": {
                        "name": "severity"
                    }
                }
            },
            "remember": [
                {
                    "compound": [
                        "customerId",
                        "assignee"
                    ],
                    "name": "customerAndAssignee"
                }
            ],
            "indexes": [
                {
                    "ticketId": 1                    
                },
                {
                    "status": 1,
                    "severity": 1
                },
                {
                    "createdAt": -1
                },
                {
                    "tenantId": 1,
                    "assignee": 1
                }
            ]
        }
    ],
    "workloads": [
        {
            "name": "100M",
            "variables": {
                "tenantId": "100M"
            },
            "template": "constantLoad",
            "op": "insert",
            "threads": 20,
            "batch": 100,
            "pace": 250,
            "stopAfter": 1000000
        }        
    ]
}