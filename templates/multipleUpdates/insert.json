{
    "connectionString": "$DEMO_DB_URI",
    "reportInterval": 10000,
    "templates": [
        {
            "name": "multiUpdates",
            "database": "poc_demo",
            "collection": "tickets_15M_updates",
            "drop": true,            
            "dictionaries": {
                "statuses": [
                    "OPEN",
                    "PENDING",
                    "REJECTED",
                    "CLOSED_BY_USER",
                    "FIXED",
                    "CLOSED"
                ],
                "severity": [
                    "LOW",
                    "NORMAL",
                    "HIGH",
                    "URGENT",
                    "CRITICAL"
                ],
                "assignee": {
                    "file": "./resources/actors_100.json",
                    "type": "json"
                }
            },
            "variables": {
                "createDate": {
                    "%date": {
                        "min": {
                            "$date": "2021-10-01"
                        },
                        "max": {
                            "$date": "2023-03-23"
                        }
                    }
                }
            },
            "template": {
                "_id": "%objectid",                
                "tenantId": "#tenantId",
                "name": "%fullName",
                "title": "%lorem.sentence",
                "description": "%lorem.sentence",
                "createdAt": "#createDate",
                "ticketId": "%sequence",
                "customerId": {
                    "%stringTemplate": {
                        "template": "!!&&?!??&"
                    }
                },
                "assignee": {
                    "%dictionary": {
                        "name": "assignee"
                    }
                },
                "status": {
                    "%dictionary": {
                        "name": "statuses"
                    }
                },
                "updateAt": {
                    "%date": {
                        "min": "#createDate",
                        "max": {
                            "$date": "2023-08-23"
                        }
                    }
                },
                "severity": {
                    "%dictionary": {
                        "name": "severity"
                    }
                }
            },
            "indexes": [
                {
                    "ticketId": 1
                },
                {
                    "numUpdates": 1
                }                
            ]
        }
    ],
    "workloads": [        
        {
            "name": "15M",
            "variables": {
                "tenantId": "15M"
            },            
            "template": "multiUpdates",
            "op": "insert",
            "threads": 10,
            "batch": 1000,
            "stopAfter": 1500
        }
    ]
}